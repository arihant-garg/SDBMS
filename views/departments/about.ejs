<%- include("partials/header")%>
        <div class="container">
                <div id="home" class="jumbotron">
                <h1 id="good" class="text-center">List Of Courses</h1>
                <a class="btn btn-success btn-lg"href="/departments/<%=department._id%>/new">Add a new Course</a>
                </div>
                <div class="row">
                        <div class="col-lg-12">
                <table
                border="1"
                cellpadding="10">
                        <tr>
                           <th>Subject Name</th>
                           <th>Subject Code</th>
                           <th>Faculty name</th>
                           <th>Delete</th>
                        </tr>
                        <% department.courses.forEach(function(course){ %>
                            <tr>
                            <td><%=course.name %></td>
                            <td><%=course.code%></td>
                            <td><%=course.faculty%></td>
                            <td>
                                    <form action="/departments/<%=department._id%>/courses/<%=course._id %>?_method=DELETE" method="POST">
                                            <button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                                            </form>
                            </td>
                            </tr>
                    <% }) %>
        </table>
        </div>
        </div>
                </div>
